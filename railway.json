{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "nixpacksConfigPath": "nixpacks.toml",
    "nixpacksPlan": {
      "phases": {
        "npm:config": {
          "dependsOn": ["setup"],
          "cmds": [
            "npm config set //npm.pkg.github.com/:_authToken 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",
            "npm config set @flashjames:registry https://npm.pkg.github.com/"
          ]
        },
        "installPlugins": {
          "dependsOn": ["setup", "npm:config"]
        }
      }
    }
  },
  "deploy": {
    "numReplicas": 1,

    "sleepApplication": false,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
